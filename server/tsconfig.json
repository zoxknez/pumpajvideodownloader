{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
  "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["index.ts", "core/**/*.ts", "types/**/*.ts", "db/**/*.ts", "routes/**/*.ts", "middleware/**/*.ts", "tests/**/*.ts"]
}
