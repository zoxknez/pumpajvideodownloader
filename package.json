{
  "name": "vite-react-typescript-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "Pumpaj media downloader desktop app (Electron + Vite)",
  "author": "NovPocetak",
  "engines": { "node": ">=18.18" },
  "workspaces": ["server"],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:server": "npm run build --prefix server",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "npm run lint:fix",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "dev:start:frontend": "vite --port 5183",
    "dev:start:backend": "npm run dev --prefix server",
    "dev:start:all": "concurrently -k --restart-tries 999 --restart-after 2000 -n FE,BE \"npm:dev:start:frontend\" \"npm:dev:start:backend\"",
    "dev:stop": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\tools\\stop.ps1",
    "dev:clean": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\tools\\clean.ps1",
  "dev:clean:data": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\tools\\clean-data.ps1",
    "dev:smoke": "powershell -NoProfile -ExecutionPolicy Bypass -File .\\tools\\smoke.ps1",
    "typecheck": "tsc -p tsconfig.app.json --noEmit",
    "typecheck:server": "tsc -p server/tsconfig.json --noEmit",
    "dev:ui": "vite build --watch",
    "dev:electron": "cross-env ELECTRON_DISABLE_SECURITY_WARNINGS=true electron ./electron/main.js",
    "dev:ipc": "concurrently -k \"npm:dev:ui\" \"npm:dev:electron\"",
    "dist:win": "npm run build && npx electron-builder --win portable zip"
  },
  "dependencies": {
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "electron": "^31.0.2",
    "electron-builder": "^24.13.3",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "chokidar": "^3.6.0",
    "@eslint/js": "^9.9.1",
    "@types/node": "^20.11.30",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^27.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vitest": "^2.0.5"
  },
  "main": "electron/main.js",
  "build": {
    "directories": { "output": "release" },
  "appId": "com.downloader.app",
  "productName": "Pumpaj Media Downloader",
  "artifactName": "PumpajMediaDownloader-${version}-${arch}.${ext}",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "server/dist/**/*",
      "server/package.json"
    ],
    "extraResources": [
      { "from": "server/dist", "to": "server/dist" },
      { "from": "server/package.json", "to": "server/package.json" },
      { "from": "server/node_modules", "to": "server/node_modules" },
      { "from": "binaries", "to": "binaries" }
    ],
    "win": {
      "target": ["portable", "zip"],
      "icon": "public/icon.ico"
    }
  }
}
